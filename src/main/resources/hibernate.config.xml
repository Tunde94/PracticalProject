<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <!--        localhost:3306/hibernate53 = numele bazei de date-->
        <property name="connection.url">jdbc:mysql://localhost:3306/project_hibernate53</property>
        <property name="connection.username">root</property>
        <property name="connection.password">csavas</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hbm2ddl.auto">create</property> <!-- sterge tabelul, daca exista si- l creaza de la 0 cand rulam programul -->
        <property name="show_sql">true</property> <!-- mesaj in consola -->
    </session-factory>
</hibernate-configuration>